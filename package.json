{
  "name": "xcomponent-ai",
  "version": "0.1.3",
  "description": "LLM-first framework for AI agents (Claude, GPT) to build apps with sanctuarized business logic. Event-driven FSM runtime with multi-instance state machines, cross-component communication, event sourcing, and production-ready persistence (PostgreSQL, MongoDB)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "xcomponent-ai": "dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "examples/",
    "README.md",
    "PERSISTENCE.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "cli": "ts-node src/cli.ts",
    "api": "ts-node src/api.ts",
    "doc": "typedoc --out docs src",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "preversion": "npm run lint && npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "fsm",
    "state-machine",
    "finite-state-machine",
    "agentic-ai",
    "langchain",
    "fintech",
    "compliance",
    "trading",
    "kyc",
    "xcomponent",
    "workflow",
    "event-sourcing",
    "event-driven",
    "microservices",
    "orchestration",
    "saga-pattern",
    "process-automation",
    "business-logic",
    "postgresql",
    "mongodb",
    "typescript",
    "cross-component",
    "multi-instance",
    "persistence",
    "real-time",
    "websocket"
  ],
  "author": {
    "name": "XComponent AI Contributors",
    "email": "dev@xcomponent.com"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/fredericcarre/mayele-ai#readme",
  "bugs": {
    "url": "https://github.com/fredericcarre/mayele-ai/issues",
    "email": "dev@xcomponent.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fredericcarre/mayele-ai.git"
  },
  "dependencies": {
    "@langchain/core": "^0.3.21",
    "@langchain/openai": "^0.3.14",
    "commander": "^12.1.0",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "xstate": "^5.20.0",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.5",
    "typescript": "^5.7.3"
  }
}
